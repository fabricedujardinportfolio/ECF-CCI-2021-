<!DOCTYPE html>
<%- include('partials/head'); %>

<body>
    <%- include('partials/header'); %>
    <%- include('product-details-layout/breadcrumb'); %>
    <div class="container mt-5">
        <div class="row">
            <div class="col"></div>
            <div class="col-6">
                <img src="image/hand-painted-blue-flat-dish.jpg" alt="" style="height: 400px; width: 100%;">
            </div>
            <div class="col-5">
                <div class="container-fluid h-100 ">
                    <div class="col-12 border-bottom-gray h-75 text-center">
                        <small class="position font-size-small text-muted"> <strong>${post.brand}</strong> </small>
                        <h2 class="position font-size-h2">${post.title}</h2>
                        <small class="position font-size-small text-muted">${post.price}</small>
                        <p class="position text-muted">${post.description}</p>
                    </div>
                    <div class="row mt-5">
                        <div class="col-3"></div>
                        <div class="col-3">
                            <div class="row">
                                <div class="col-6 bg-color ">
                                    <div id="result" class="text-center text-white margin35"><strong>0</strong></div>
                                </div>
                                <div class="col-6">
                                    <div onclick="plus()" class="bg-color-2 text-center" style="margin: 0 0px 10px 0;">
                                        <span>+</span></div>
                                    <div onclick="moin()" class="bg-color-2 text-center"><span>-</span> </div>
                                </div>
                            </div>
                        </div>
                        <div class=" col-5">
                            <button class="h-100 w-100 bg-dark text-white">ADD To CART</button>
                        </div>
                        <div class=" col-1"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('partials/footer'); %>
    <script>
        var clicks = 0;

        function plus() {
            clicks += 1;
            document.getElementById("result").innerHTML = clicks;
        };

        function moin() {
            if (clicks > 0) {
                clicks -= 1;
                document.getElementById("result").innerHTML = clicks;
            } else {
                clicks = 0;
            }
        };
    </script>
</body>

</html>